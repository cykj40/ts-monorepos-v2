{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "noEmit": true,
    "noImplicitAny": true,
    "allowJs": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "noUncheckedSideEffectImports": true
  },
  "include": [
    "packages/src/**/*.ts",
    "packages/src/**/*.js",
    "packages/src/**/*.svelte",
    "tests/**/*.ts",
    "tests/**/*.js",
    "tests/**/*.svelte",
    "packages/tailwind.config.js",
    "packages/postcss.config.cjs",
    "vite.config.ts",
    "packages/svelte.config.js"
  ],
  "exclude": ["**/assets/**/*", "node_modules", "packages/dist"]
}