{
	"name": "@seeds/server",
	"private": true,
	"version": "0.0.0",
	"type": "module",
	"scripts": {
		"dev": "tsx --watch --watch-preserve-output src/index.ts",
		"build": "tsc -p tsconfig.build.json",
		"start": "node dist/index.js",
		"test": "vitest run",
		"test:watch": "vitest",
		"test:ui": "vitest --ui",
		"test:coverage": "vitest run --coverage",
		"lint": "eslint src tests",
		"check": "tsc --noEmit"
	},
	"dependencies": {
		"@seeds/models": "workspace:*",
		"cors": "^2.8.5",
		"express": "^5.1.0",
		"winston": "^3.17.0",
		"yaml": "^2.8.0"
	},
	"devDependencies": {
		"@types/cors": "^2.8.19",
		"@types/express": "^5.0.3",
		"@types/node": "^24.0.0",
		"@vitest/coverage-v8": "^3.2.3",
		"@vitest/ui": "^3.2.3",
		"tsx": "^4.20.0",
		"vitest": "^3.2.3"
	},
	"refrences": [
		{
			"path": "../models/tsconfig.build.json"
		}
	]
}
